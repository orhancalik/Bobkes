<%- include("header") %>
  <main>
    <section id="pokemonDetail">
      <article id="Pokemonstatspicture">
        <img src="assets/images/bulbasaur.jpg" alt="" />
      </article>
      <article>
        <h1 id="naampokemonstats">Bulbasaur</h1>
        <ul>
          <li>Bijnaam: Bulba</li>
          <li>Level: 25</li>
          <li>Gevangen op: 10 januari 2023</li>

          <li>
            <button>
              <img src="assets/images/up.png" alt="" width="45px" /></button
            >Wins: 15
          </li>
          <li>
            <button>
              <img src="assets/images/down.png" alt="" width="45px" /></button
            >Losses: 5
          </li>
        </ul>
      </article>
      <article class="statsmenu">
        <h1>Stats</h1>
        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-success"
            role="progressbar"
            style="width: 75%"
            aria-valuenow="75"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            HP: 75
          </div>
        </div>
        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-warning"
            role="progressbar"
            style="width: 39%; height: 100%"
            aria-valuenow="39"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            Aanval: 39
          </div>
        </div>

        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-danger"
            role="progressbar"
            style="width: 21%"
            aria-valuenow="21"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            Verdediging: 21
          </div>
        </div>

        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-success"
            role="progressbar"
            style="width: 89%"
            aria-valuenow="89"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            Speciale Aanval: 89
          </div>
        </div>

        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-danger"
            role="progressbar"
            style="width: 35%"
            aria-valuenow="35"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            Speciale Verdediging: 35
          </div>
        </div>
        <div class="progress" style="height: 30px">
          <div
            class="progress-bar bg-danger"
            role="progressbar"
            style="width: 20%"
            aria-valuenow="20"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            Speed: 20
          </div>
        </div>
      </article>
    </section>
    <h1 id="Titel-evo">Evolution Path</h1>
    <section id="evolution">
      <article class="evo-path">
        <img src="assets/images/bulbasaur.jpg" alt="" />
      </article>

      <img src="assets/images/Rechts.png" alt="" width="60px" height="60px" />

      <article class="evo-path">
        <img src="assets/images/ivysaur.jpeg" alt="" />
      </article>
      <img src="assets/images/Rechts.png" alt="" width="60px" height="60px" />
      <article class="evo-path">
        <img src="assets/images/venusaur.jpeg" alt="" />
      </article>
    </section>
  </main>


